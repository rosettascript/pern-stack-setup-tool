{
  "name": "pern-setup-tool",
  "version": "2.0.0",
  "description": "Comprehensive PERN Stack Setup Tool with Advanced Features",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security",
    "test:quick": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:unit:coverage": "jest --testPathPattern=unit --coverage --coverageDirectory=coverage/unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:integration:linux": "cross-env PLATFORM=linux npm run test:integration",
    "test:integration:macos": "cross-env PLATFORM=macos npm run test:integration",
    "test:integration:windows": "cross-env PLATFORM=windows npm run test:integration",
    "test:api": "jest --testPathPattern=api",
    "test:e2e": "cypress run",
    "test:e2e:headless": "cypress run --headless",
    "test:e2e:record": "cypress run --record",
    "test:e2e:journey": "cypress run --spec 'cypress/integration/journeys/**/*.spec.js'",
    "test:performance": "npm run test:performance:load && npm run test:performance:memory && npm run test:performance:cpu",
    "test:performance:load": "artillery run tests/performance/load-test.yml",
    "test:performance:api": "autocannon -c 100 -d 60 -R 1000 http://localhost:5000/api/users",
    "test:performance:setup": "node tests/performance/setup-performance-test.js",
    "test:performance:memory": "clinic doctor -- node src/index.js --test-mode",
    "test:performance:cpu": "clinic flame -- node src/index.js --test-mode",
    "test:performance:scale": "node tests/performance/scalability-test.js",
    "test:performance:baseline": "node tests/performance/baseline-test.js",
    "test:security": "npm run test:security:scan && npm run test:security:dependencies && npm run test:security:config",
    "test:security:scan": "node tests/security/security-scan.js",
    "test:security:dependencies": "npm audit --audit-level=moderate",
    "test:security:config": "node tests/security/config-security-test.js",
    "test:security:injection": "node tests/security/injection-test.js",
    "test:security:privileges": "node tests/security/privilege-test.js",
    "test:security:data": "node tests/security/data-exposure-test.js",
    "test:compliance": "npm run test:compliance:soc2 && npm run test:compliance:hipaa && npm run test:compliance:gdpr",
    "test:compliance:soc2": "node tests/compliance/soc2-test.js",
    "test:compliance:hipaa": "node tests/compliance/hipaa-test.js",
    "test:compliance:gdpr": "node tests/compliance/gdpr-test.js",
    "test:platform": "npm run test:platform:linux && npm run test:platform:macos && npm run test:platform:windows",
    "test:platform:linux": "docker run --rm -v $(pwd):/app -w /app node:18 npm run test:unit",
    "test:platform:macos": "echo 'Run on macOS: npm run test:unit'",
    "test:platform:windows": "echo 'Run on Windows: npm run test:unit'",
    "test:platform:wsl": "wsl npm run test:unit",
    "test:container": "npm run test:container:docker",
    "test:container:docker": "docker build -t pern-test . && docker run --rm pern-test npm test",
    "test:container:images": "node tests/container/image-test.js",
    "test:container:network": "node tests/container/network-test.js",
    "test:component": "node tests/component/component-test-runner.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest",
    "test:rerun-failed": "jest --onlyFailures",
    "test:analyze-failures": "node tests/utils/failure-analyzer.js",
    "test:report": "node tests/utils/test-report-generator.js",
    "test:dashboard": "node tests/utils/test-dashboard.js",
    "test:export": "node tests/utils/test-export.js",
    "test:precommit": "npm run lint && npm run test:unit",
    "test:ci": "npm run test:all -- --ci --coverage --watchAll=false",
    "db:seed:test": "node scripts/seed-test-database.js",
    "db:reset:test": "node scripts/reset-test-database.js",
    "security:scan": "npm audit",
    "security:audit": "node src/utils/security-audit.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "docs": "node src/utils/generate-docs.js",
    "docs:serve": "node src/utils/documentation-server.js",
    "validate": "node src/utils/validate-implementation.js",
    "validate:production": "npm run validate && npm run test:all && npm run security:audit"
  },
  "keywords": [
    "pern",
    "setup",
    "postgresql",
    "express",
    "react",
    "nodejs",
    "docker",
    "redis",
    "nginx",
    "pm2",
    "automation",
    "devops",
    "microservices",
    "enterprise"
  ],
  "author": "rosettascript <rosettascript@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "inquirer": "^9.2.0",
    "child-process-promise": "^2.2.1",
    "fs-extra": "^11.1.0",
    "dotenv": "^16.0.3",
    "pg": "^8.10.0",
    "ioredis": "^5.3.0",
    "dockerode": "^4.0.0",
    "pm2": "^5.3.0",
    "nginx-conf": "^2.1.0",
    "winston": "^3.8.0",
    "morgan": "^1.10.0",
    "helmet": "^6.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "joi": "^17.9.0",
    "chalk": "^4.1.2",
    "ora": "^6.3.0",
    "cli-progress": "^3.12.0",
    "commander": "^10.0.0",
    "semver": "^7.5.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "cypress": "^12.17.4",
    "newman": "^5.3.0",
    "artillery": "^2.0.0",
    "eslint": "^8.40.0",
    "prettier": "^2.8.0",
    "nodemon": "^2.0.22",
    "clinic": "^13.0.0",
    "autocannon": "^7.10.0",
    "cross-env": "^7.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rosettascript/pern-stack-setup-tool.git"
  },
  "bugs": {
    "url": "https://github.com/rosettascript/pern-stack-setup-tool/issues"
  },
  "homepage": "https://github.com/rosettascript/pern-stack-setup-tool#readme"
}